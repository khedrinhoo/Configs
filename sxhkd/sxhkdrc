super + Return
	kitty

super + w
	brave

super + space
	rofi -show run

super + period
	amixer set Master 5%+

super + comma
	amixer set Master 5%-

super + m
	amixer set Master toggle

super + p
    scrot -u -q 100 ~/Screenshots/screenshot_%Y-%m-%d_%H-%M-%S.png

super + shift + p
    scrot -s -q 100 ~/Screenshots/screenshot_%Y-%m-%d_%H-%M-%S.png

super + Escape
	pkill -USR1 -x sxhkd

super + shift + e
	bspc quit

super + shift + r
	bspc wm -r

super + shift + q
	bspc node -c

super + f
	bspc desktop -l next

super + t
	bspc node -t tiled

super + o
	bspc node -t floating

super + {h,j,k,l}
	bspc node -f {west,south,north,east}

super + shift + {h,j,k,l}
	bspc node -s {west,south,north,east}

super + Tab
	bspc desktop -f last

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

super + alt + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + alt + {1-9}
	bspc node -o 0.{1-9}

super + alt + space
	bspc node -p cancel

super + alt + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

super + ctrl + {h,j,k,l}
  bspc node -z {left -50 0 || bspc node -z right -50 0, \
                bottom 0 50 || bspc node -z top 0 50,\
                top 0 -50 || bspc node -z bottom 0 -50,\
                right 50 0 || bspc node -z left 50 0}

super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
