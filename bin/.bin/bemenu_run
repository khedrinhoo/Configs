#!/bin/bash

FONT="Noto Sans Mono Bold 12"
ROWS=20           
BG="#000000"
FG="#ffffff"      
SEL_BG="#285577" 
SEL_FG="#ffffff"  

bemenu-run \
    --list $ROWS \
    --fn "$FONT" \
    --nb "$BG" \
    --nf "$FG" \
    --hb "$SEL_BG" \
    --hf "$SEL_FG" \
    --tb "$BG" \
    --tf "$FG" \
    --fb "$BG" \
    --ff "$FG" \
    --ab "$BG" \
    --af "$FG" \
    --prompt "Run:" \
    --ignorecase
