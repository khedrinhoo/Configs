#
# progams
#

# terminal 
super + Return
	wezterm

# browser
super + b
	brave

# program launcher
super + @space
	rofi -show run

#
# scripts
#

super + {period, comma, shift + m}
	$HOME/.scripts/volume.sh {up, down, toggle}

#
# bspwm & sxhkd
#

# reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd

# restart bspwm
super + shift + r
	bspc wm -r

# quit bspwm
super + shift + e
	bspc quit

#
# states
#

# tiling state
super + t
	bspc node -t tiled

# floating state
super + o
	bspc node -t floating

# fullscreen state
super + f
	bspc node -t fullscreen

# toggle between tiling & fullscreen
super + m
	bspc desktop -l next

#
# windows
#

# focus & move window
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# resize window 
super + control + {h,j,k,l}
  bspc node -z {left -20 0 || bspc node -z right -20 0, \
                bottom 0 20 || bspc node -z top 0 20,\
                top 0 -20 || bspc node -z bottom 0 -20,\
                right 20 0 || bspc node -z left 20 0}

# focus last two windows
super + w
	bspc node -f last

# close window
super + shift + q
	bspc node -c

# move floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

#
# workspaces
#

# focus & move to workpace
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# focus last two workpaces
super + Tab
	bspc desktop -f last
